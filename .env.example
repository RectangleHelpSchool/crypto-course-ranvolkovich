# API Key (required)
INFURA_API_KEY=your_infura_key_here  # Get free key at https://infura.io/

# Endpoint
INFURA_ENDPOINT=https://mainnet.infura.io/v3/

# Block Scanning Configuration
BLOCKS_PER_CHUNK=10000
MAX_CONCURRENT_CHUNKS=5

# Retry Configuration
MAX_RETRY_ATTEMPTS=5
RETRY_MIN_WAIT=1
RETRY_MAX_WAIT=60
RETRY_MULTIPLIER=2

# Logging
LOG_LEVEL=INFO
